.Home
  .Jumbotron
    margin auto 20px 20px
    .Desktop
      size 100% 875px
      relative()
      overflow hidden
      .BGVideo
        absolute top 50% left 50%
        transform: translate(-50%, -50%)
        z-index -1000
        +below(1556px)
          size auto 100%
        +above(1557px)
          size 100% auto
      .BGTint
        size 100% 100%
        background-color JumbotronTint
        relative()
        .Brand
          absolute top 50% left 50%
          transform: translate(-50%, -50%)
          img
            size 300px auto


    .Mobile
      relative()
      overflow hidden
      +below(767px)
        size 100% 500px
      +above(768px)
        size 100% 800px
      .BGPic
        size 100% 100%
        .BGTint
          size 100% 100%
          background-color JumbotronTint
          relative()
          .Brand
            absolute top 50% left 50%
            transform: translate(-50%, -50%)
            img
              size 300px auto



  .Content
    background-image: BGPattern
    size 100% auto

    #featured
      center(1150px)
      height 500px
      a.item
        display: block
        margin auto 15px
        color black
        &:hover
        &:focus
          .Pic
            opacity: 0.75
          .Address
            color grey
          .Info
            .Price
              color grey
            .Bed
              color grey
            .Bath
              color grey
        .Pic
          size 540px 340px
          max-width: 100%

        .Address
          text-align: center
          font-size 20px
          padding 25px 0px
        .Info
          center(200px)
          text-align: center
          .Price
            column(1/2)
            font-size 14px
          .Bed
            column(1/4)
            font-size 14px
          .Bath
            column(1/4)
            font-size 14px

    #Communities
      center(100%)
      +below(767px)
        height 300px
      +above(768px)
        height 600px
      .item
        .Pic
          +below(767px)
            size 100% 300px
          +above(768px)
            size 100% 600px
          relative()
          .Community
            align(b)
            background-color rgba(black, 0.5)
            +below(767px)
              size 200px 150px
            +above(768px)
              size 300px 150px
            .Name
              h2()
              color white
              text-align: center;
            a.Explore
              display: block
              background-color white
              color red
              size 110px 30px
              relative()
              margin auto
              .text
                align(v)
                left 10px
                font-size 12px
              i
                align(v)
                right 10px
                font-size: 20px
