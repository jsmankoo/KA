.PropertyInfo
  center(1165px)
  padding 0px 20px
  .Wrapper
    center()
    border-top: 2px solid black
    .Info
      center()
      margin 40px auto
      +below(767px)
        .Price
        .Bed
        .Bath
        .Area
        .Status
          center()
          relative()
          h3
            column(1/2)
            h3()
            text-align: left
            margin auto
            color red
            padding 0px 0px 0px 5px
          h6
            column(1/2)
            h6()
            text-align: right
            margin auto
            padding 10px 0px
      +above(768px)
        .Price
        .Bed
        .Bath
        .Area
        .Status
          span(1/5)
          text-align: center
          h3
            h3()
            margin auto
            color red
          h6
            h6()
            margin auto
    .Paragraph
      text-align: center
      padding 0px 50px
      +below(767px)
        padding 0px 0px
      h1
        h1()
      h2
        h2()
      h3
        h3()
      h4
        h4()
      h5
        h5()
      h6
        h6()
      p
        normal()
        line-height: 25px
        letter-spacing: 1px
    .KeyValues
      center()
      margin 50px auto 80px
      padding 0px 50px
      +below(767px)
        padding 0px
      .KV
        +below(767px)
          center()
          size 100% auto
          text-align: center
          margin 10px auto
        +above(768px)
          column(1/3, cycle: 3)
          margin 5px auto
        p
          normal()
        strong
          bold()
        a
          color red
          hover-color grey true
